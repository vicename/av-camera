<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:fitsSystemWindows="true"
    tools:context="com.yamedie.av_camera.ShowIMGActivity">

    <include layout="@layout/content_show_img" />

    <include
        layout="@layout/content_show_pic_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom" />

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_go_retake_photo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|left"
            android:layout_margin="16dp"
            android:background="@drawable/selector_btn_no_limit_md_dark"
            android:scaleType="centerInside"
            android:src="@drawable/ic_camera_alt_white_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:scaleType="center"
            android:src="@drawable/ic_search_24dp" />

        <ImageView
            android:id="@+id/iv_go_photo_library"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:background="@drawable/selector_btn_no_limit_md_dark"
            android:scaleType="center"
            android:src="@drawable/ic_photo_library_white_24dp" />
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
